{
  "name": "coursemapper-webserver",
  "version": "1.0.0",
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "build": "npm-run-all  --sequential clean transpile server",
    "server": "node ./dist-server/server.js",
    "dev": "NODE_ENV=development npm-run-all build",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src  --out-dir dist-server --source-maps",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cookie-session": "^2.1.0",
    "debug": "~4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "file-extension": "^4.0.5",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "multer": "^1.4.5-lts.1",
    "neo4j-driver": "^5.26.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "redis": "^4.7.0",
    "rimraf": "^6.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "cors": "^2.8.5"
  },
  "optionalDependencies": {
    "win-node-env": "^0.6.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
